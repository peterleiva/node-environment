{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },

    "overrides": [
        {
            "files": "**/*(mocks|tests|snapshots)/**/*",
            "env": {
              "jest/globals": true
            },

            "plugins": ["jest"],
            "extends": ["plugin:jest/recommended"]
        }
    ]
}
